---
const companies = [
  { name: 'Airbnb', logo: 'airbnb.svg' },
  { name: 'Booking', logo: 'booking.svg' },
  { name: 'klook', logo: 'klook.svg' },
  { name: 'airalo', logo: 'airalo.svg' },
];
---
<section class="py-16 bg-white">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl md:text-4xl font-bold text-center mb-16 leading-tight">
      <span class="bg-clip-text text-transparent bg-gradient-to-r from-blue-600 to-blue-400">
        Empresas
      </span>
      <br class="md:hidden"> que confían en mí
    </h2>
    <div class="flex flex-wrap justify-center items-center gap-8 md:gap-12 lg:gap-16">
      {companies.map((company) => (
        <div class="w-1/2 sm:w-1/3 md:w-1/4 lg:w-1/5 flex items-center justify-center">
          <img
            src={`/images/clients/${company.logo}`}
            alt={`Logo de ${company.name}`}
            class="w-32 h-32 object-contain"
          />
        </div>
      ))}
    </div>
  </div>
</section>
<style>
  img {
    filter: grayscale(100%);
    opacity: 0.7;
    transition: all 0.3s ease;
  }
  img:hover {
    filter: grayscale(0%);
    opacity: 1;
  }
</style>