---
import { Image } from "astro:assets";
import { FaXTwitter, FaLinkedin} from 'react-icons/fa6';

interface Props {
  name: string;
  bio: string;
  avatar: string;
  verified?: boolean;
  socialMedia?: {
    twitter?: string;
    linkedin?: string;
  };
}

const { name, bio, avatar, verified = false, socialMedia = {} } = Astro.props;
---

<div class="author-box">
  <div class="author-header">
    <Image src={avatar} alt={`Avatar de ${name}`} width={80} height={80} class="author-avatar" />
    <div class="author-info">
      <h3 class="author-name">
        {name}
        {verified && (
          <span class="verified-badge" title="Verificado">
            <svg viewBox="0 0 22 22" xmlns="http://www.w3.org/2000/svg">
              <path d="M20.396 11c-.018-.646-.215-1.275-.57-1.816-.354-.54-.852-.972-1.438-1.246.223-.607.27-1.264.14-1.897-.131-.634-.437-1.218-.882-1.687-.47-.445-1.053-.75-1.687-.882-.633-.13-1.29-.083-1.897.14-.273-.587-.704-1.086-1.245-1.44S11.647 1.62 11 1.604c-.646.017-1.273.213-1.813.568s-.969.854-1.24 1.44c-.608-.223-1.267-.272-1.902-.14-.635.13-1.22.436-1.69.882-.445.47-.749 1.055-.878 1.688-.13.633-.08 1.29.144 1.896-.587.274-1.087.705-1.443 1.245-.356.54-.555 1.17-.574 1.817.02.647.218 1.276.574 1.817.356.54.856.972 1.443 1.245-.224.606-.274 1.263-.144 1.896.13.634.433 1.218.877 1.688.47.443 1.054.747 1.687.878.633.132 1.29.084 1.897-.136.274.586.705 1.084 1.246 1.439.54.354 1.17.551 1.816.569.647-.016 1.276-.213 1.817-.567s.972-.854 1.245-1.44c.604.239 1.266.296 1.903.164.636-.132 1.22-.447 1.68-.907.46-.46.776-1.044.908-1.681s.075-1.299-.165-1.903c.586-.274 1.084-.705 1.439-1.246.354-.54.551-1.17.569-1.816zM9.662 14.85l-3.429-3.428 1.293-1.302 2.072 2.072 4.4-4.794 1.347 1.246z" fill="#1d9bf0"></path>
            </svg>
          </span>
        )}
      </h3>
      <p class="author-bio">{bio}</p>
    </div>
  </div>
  {Object.keys(socialMedia).length > 0 && (
    <div class="social-links">
      {socialMedia.twitter && (
        <a href={socialMedia.twitter} target="_blank" rel="noopener noreferrer" class="social-icon">
          <FaXTwitter />
        </a>
      )}
      {socialMedia.linkedin && (
        <a href={socialMedia.linkedin} target="_blank" rel="noopener noreferrer" class="social-icon">
          <FaLinkedin />
        </a>
      )}
    </div>
  )}
</div>

<style>
  .author-box {
    display: flex;
    flex-direction: column;
    padding: 1.5rem;
    background-color: #ffffff;
    border-radius: 12px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    margin: 1.5rem 0;
    border: 1px solid #e0e0e0;
  }
  .author-header {
    display: flex;
    align-items: center;
  }
  .author-avatar {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    object-fit: cover;
    margin-right: 1.5rem;
  }
  .author-info {
    flex: 1;
  }
  .author-name {
    margin: 0 0 0.5rem 0;
    font-size: 1.4rem;
    font-weight: 700;
    color: #333;
    display: flex;
    align-items: center;
  }
  .verified-badge {
    display: inline-flex;
    margin-left: 0.5rem;
    width: 1.2em;
    height: 1.2em;
  }
  .verified-badge svg {
    width: 100%;
    height: 100%;
  }
  .author-bio {
    margin: 0;
    font-size: 1rem;
    color: #555;
    line-height: 1.6;
  }
  .social-links {
    display: flex;
    gap: 1rem;
    margin-top: 1rem;
  }
  .social-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 28px;
    height: 28px;
    border-radius: 50%;
    background-color: #f0f0f0;
    color: #333;
    font-size: 1rem;
    transition: all 0.3s ease;
  }
  .social-icon:hover {
    background-color: #e0e0e0;
    transform: translateY(-2px);
  }
</style>